generator client {
  provider = "prisma-client"
  output   = "../src/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") 
}


model User  {
  id Int @id @default(autoincrement())
  firstname String
  lastname String
  email String @unique
  password String
  posts Post[]
  @@unique([firstname, lastname])
}

model Post {
  id Int @id @default(autoincrement())
  content String
  author User @relation(fields: [author_id], references:[id])
  author_id Int
}


